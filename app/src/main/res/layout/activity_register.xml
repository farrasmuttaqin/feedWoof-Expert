<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/littlecircle" />

            <TextView
                android:id="@+id/nama1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robotoregular"
                android:textSize="14dp"
                android:text="Nama Lengkap"
                android:textColor="@color/recButton" />

            <EditText
                android:id="@+id/nama2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/robotoregular"
                android:hint="John Doe"
                android:textSize="12dp"
                android:background="@drawable/bordercolor"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/email1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama2"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robotoregular"
                android:textSize="14dp"
                android:text="Email"
                android:textColor="@color/recButton" />

            <EditText
                android:id="@+id/email2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/robotoregular"
                android:hint="Johndoe@gmail.com"
                android:textSize="12dp"
                android:background="@drawable/bordercolor"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/username1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email2"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robotoregular"
                android:textSize="14dp"
                android:text="Username"
                android:textColor="@color/recButton" />

            <EditText
                android:id="@+id/username2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/robotoregular"
                android:hint="Johndoe"
                android:textSize="12dp"
                android:background="@drawable/bordercolor"
                android:padding="8dp"/>


            <TextView
                android:id="@+id/password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username2"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robotoregular"
                android:textSize="14dp"
                android:text="Password"
                android:textColor="@color/recButton" />

            <EditText
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/robotoregular"
                android:hint="******"
                android:textSize="12dp"
                android:inputType="textPassword"
                android:background="@drawable/bordercolor"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/confirm1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password2"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robotoregular"
                android:textSize="14dp"
                android:text="Confirm Password"
                android:textColor="@color/recButton" />

            <EditText
                android:id="@+id/confirm2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirm1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/robotoregular"
                android:hint="******"
                android:textSize="12dp"
                android:inputType="textPassword"
                android:background="@drawable/bordercolor"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/alamat1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirm2"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robotoregular"
                android:textSize="14dp"
                android:text="Alamat Lengkap"
                android:textColor="@color/recButton" />

            <EditText
                android:id="@+id/alamat2"
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:layout_below="@+id/alamat1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/robotoregular"
                android:textSize="12dp"
                android:background="@drawable/bordercolor"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/hp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alamat2"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robotoregular"
                android:textSize="14dp"
                android:text="Nomor Handphone"
                android:textColor="@color/recButton" />

            <EditText
                android:id="@+id/hp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hp1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/robotoregular"
                android:textSize="12dp"
                android:background="@drawable/bordercolor"
                android:padding="8dp"/>

            <Button
                android:id="@+id/masuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hp2"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectanglebutton"
                android:fontFamily="@font/robotoregular"
                android:text="Daftar Sekarang"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:layout_marginBottom="30dp"/>


        </LinearLayout>

    </ScrollView>






</android.support.constraint.ConstraintLayout>