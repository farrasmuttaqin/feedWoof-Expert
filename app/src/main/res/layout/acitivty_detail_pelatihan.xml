<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Peternak"
            android:fontFamily="@font/robotobold"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            app:cardCornerRadius="7dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/minicircle" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginLeft="25dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Arif Putra Lutfi"
                            android:textSize="18dp"
                            android:fontFamily="@font/robotobold"
                            android:gravity="right" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Ahli Pakan Sapi"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/robotoregular"
                            android:textStyle="bold"
                            android:gravity="right" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Depok, Jawa Barat"
                            android:fontFamily="@font/robotitalic"
                            android:textStyle="bold"
                            android:gravity="right" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="Rp. 500.000"
                            android:fontFamily="@font/robotoregular"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:gravity="right"
                            android:textColor="#853D25"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Pelatihan"
            android:fontFamily="@font/robotobold"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            app:cardCornerRadius="7dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingLeft="50dp"
                android:paddingBottom="15dp"
                android:paddingRight="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Materi Pelatihan"
                    android:fontFamily="@font/robotobold"
                    android:textSize="14dp"
                    android:textColor="#282120"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nama Ahli"
                    android:fontFamily="@font/robotoregular"
                    android:textSize="14dp"
                    android:textColor="#282120"
                    android:paddingTop="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tanggal Pelatihan"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/robotobold"
                    android:textSize="14dp"
                    android:textColor="#282120"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="17/08/19"
                    android:fontFamily="@font/robotoregular"
                    android:textSize="14dp"
                    android:textColor="#282120"
                    android:paddingTop="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Alamat Pelatihan"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/robotobold"
                    android:textSize="14dp"
                    android:textColor="#282120"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kampus Universitas Trilogi Jl. TMP Kalibata no. 1, Kel. Kalibata, Kec. Pancoran, Jakarta Selatan"
                    android:fontFamily="@font/robotoregular"
                    android:textSize="14dp"
                    android:textColor="#282120"
                    android:paddingTop="5dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
            
        <Button
            android:id="@+id/chatTernak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectanglebutton"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:textColor="#D1E2C4"
            android:text="CHAT DENGAN PETERNAK"/>


    </LinearLayout>

    </ScrollView>



    <include layout="@layout/bottom_navigation_view" />

</android.support.constraint.ConstraintLayout>