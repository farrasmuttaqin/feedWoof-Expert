<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_inbox" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    android:background="@drawable/rectanglebutton2"
                    app:cardBackgroundColor="#D1E2C4"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ANDA MEMILIKI 1 PESAN"
                        android:fontFamily="@font/robotobold"
                        android:textColor="@color/recButton"
                        android:textSize="16dp"
                        android:padding="20dp"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="15dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_people"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Arif Putra Lutfi"
                                android:fontFamily="@font/robotobold"
                                android:paddingLeft="20dp"
                                android:textSize="14dp"
                                android:textColor="#282120"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_content"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Pelatihan Pembuatan Pakan Sapi konsentrat untuk sapi potong"
                                android:fontFamily="@font/robotoregular"
                                android:paddingLeft="20dp"
                                android:textSize="14dp"
                                android:textColor="#282120"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_location"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Kampus Universitas Trilogi Jl. TMP Kalibata no. 1, Jakarta Selatan"
                                android:fontFamily="@font/robotoregular"
                                android:paddingLeft="20dp"
                                android:textSize="14dp"
                                android:textColor="#282120"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_margin="20dp"
                            android:gravity="right">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Tolak Pelatihan"
                                android:textColor="#853D25"
                                android:gravity="center"
                                android:layout_marginRight="20dp"/>

                            <Button
                                android:id="@+id/detil"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingRight="30dp"
                                android:paddingLeft="30dp"
                                android:textSize="10dp"
                                android:text="Terima"
                                android:fontFamily="@font/robotoregular"
                                android:background="@drawable/rectanglebutton2"/>
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <include layout="@layout/bottom_navigation_view" />

</android.support.constraint.ConstraintLayout>